<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangbin.yun.yunrights.modules.rights.mapper.MenuMapper">
    <resultMap id="BaseResultMap" type="com.zhangbin.yun.yunrights.modules.rights.model.$do.MenuDO">
        <id column="m_id" jdbcType="BIGINT" property="id"/>
        <result column="m_menu_title" jdbcType="VARCHAR" property="menuTitle"/>
        <result column="m_menu_type" jdbcType="INTEGER" property="menuType"/>
        <result column="m_description" jdbcType="VARCHAR" property="description"/>
        <result column="m_pid" jdbcType="BIGINT" property="pid"/>
        <result column="m_permission" jdbcType="VARCHAR" property="permission"/>
        <result column="m_creator" jdbcType="VARCHAR" property="creator"/>
        <result column="m_updater" jdbcType="VARCHAR" property="updater"/>
        <result column="m_create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="m_update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        m_id, m_menu_title, m_menu_type, m_description, m_pid, m_permission, m_creator, m_updater,
    m_create_time, m_update_time
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_sys_menu
        where m_id = #{id,jdbcType=BIGINT}
    </select>

    <select id="batchSelectById" parameterType="java.util.HashSet" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_sys_menu
        where m_id in
        <foreach collection="menuIds" item="id" open="(" separator=", " close=")">
            #{id,jdbcType=INTEGER}
        </foreach>
    </select>

    <select id="selectByPid" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_sys_menu
        where m_pid = #{pid,jdbcType=BIGINT}
    </select>

    <select id="selectByGroupIds" parameterType="java.util.HashSet" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_sys_menu, t_sys_group_menu
        where group_id
        <foreach collection="groupIds" item="groupId" open="(" separator=", " close=")">
            #{groupId,jdbcType=INTEGER}
        </foreach>
        and m_id = menu_id
    </select>

    <select id="selectAllByCriteria"
            parameterType="com.zhangbin.yun.yunrights.modules.rights.model.criteria.MenuQueryCriteria"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_sys_menu
        <trim prefix="where" prefixOverrides="and | or">
            <if test='criteria != null'>
                <if test="criteria.pid != null">
                    and m_pid = #{pid,jdbcType=BIGINT}
                </if>
                <if test='criteria.blurry != ""'>
                    <if test='criteria.blurryType.isMatch("menuTitle")'>
                        and m_menu_title like concat('%', #{criteria.blurry}, '%')
                    </if>
                    <if test='criteria.blurryType.isMatch("description")'>
                        and m_description like concat('%', #{criteria.blurry}, '%')
                    </if>
                </if>
                <if test='criteria.createTimes != null and criteria.createTimes > 0'>
                    and m_create_time
                    <foreach collection="createTimes" item="createTime" open=" between " separator=" and " close="">
                        #{createTime}
                    </foreach>
                </if>
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="com.zhangbin.yun.yunrights.modules.rights.model.$do.MenuDO">
        <selectKey keyProperty="id" order="BEFORE" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_sys_menu (m_menu_title, m_menu_type,
        m_description, m_pid, m_permission,
        m_creator, m_updater, m_create_time,
        m_update_time)
        values (#{menuTitle,jdbcType=VARCHAR}, #{menuType,jdbcType=INTEGER},
        #{description,jdbcType=VARCHAR}, #{pid,jdbcType=BIGINT}, #{permission,jdbcType=VARCHAR},
        #{creator,jdbcType=VARCHAR}, #{updater,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP},
        #{updateTime,jdbcType=TIMESTAMP})
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.zhangbin.yun.yunrights.modules.rights.model.$do.MenuDO">
        update t_sys_menu
        <set>
            <if test="menuTitle != null">
                m_menu_title = #{menuTitle,jdbcType=VARCHAR},
            </if>
            <if test="menuType != null">
                m_menu_type = #{menuType,jdbcType=INTEGER},
            </if>
            <if test="description != null">
                m_description = #{description,jdbcType=VARCHAR},
            </if>
            <if test="pid != null">
                m_pid = #{pid,jdbcType=BIGINT},
            </if>
            <if test="permission != null">
                m_permission = #{permission,jdbcType=VARCHAR},
            </if>
            <if test="creator != null">
                m_creator = #{creator,jdbcType=VARCHAR},
            </if>
            <if test="updater != null">
                m_updater = #{updater,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                m_create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null">
                m_update_time = #{updateTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where m_id = #{id,jdbcType=BIGINT}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete
        from t_sys_menu
        where m_id = #{id,jdbcType=BIGINT}
    </delete>

    <delete id="batchDeleteByIds" parameterType="java.util.Set">
        delete from t_sys_menu
        where m_id in
        <foreach collection="menuIds" index="index" item="id" separator="," open="(" close=")">
            #{id,jdbcType=INTEGER}
        </foreach>
    </delete>
</mapper>
