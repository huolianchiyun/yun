<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangbin.yun.yunrights.modules.rights.mapper.RoleMenuMapper">
    <resultMap id="BaseResultMap" type="com.zhangbin.yun.yunrights.modules.rights.model.$do.RoleMenuDO">
        <result column="role_id" jdbcType="INTEGER" property="roleId"/>
        <result column="menu_id" jdbcType="INTEGER" property="menuId"/>
    </resultMap>

    <insert id="insert" parameterType="com.zhangbin.yun.yunrights.modules.rights.model.$do.RoleMenuDO">
        insert into t_sys_role_menu (role_id, menu_id)
        values (#{roleId,jdbcType=INTEGER}, #{menuId,jdbcType=INTEGER})
    </insert>

    <insert id="batchInsert" parameterType="java.util.HashSet">
        insert into t_sys_role_menu (role_id, menu_id)
        values
        <foreach collection="roleMenus" item="roleMenu" separator=",">
            (#{roleMenu.roleId,jdbcType=INTEGER}, #{roleMenu.menuId,jdbcType=INTEGER})
        </foreach>
    </insert>

    <delete id="deleteByMenuIds" parameterType="java.util.HashSet">
        delete
        from t_sys_role_menu
        where menu_id in
        <foreach collection="menuIds" item="menuId" open="(" separator=", " close=")">
            #{menuId, jdbcType=INTEGER}
        </foreach>
    </delete>

    <delete id="deleteByRoleId" parameterType="java.lang.Long">
        delete
        from t_sys_role_menu
        where role_id = #{roleId,jdbcType=INTEGER}
    </delete>
</mapper>
