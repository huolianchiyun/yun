<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangbin.yun.yunrights.modules.rights.mapper.UserRoleMapper">
  <resultMap id="BaseResultMap" type="com.zhangbin.yun.yunrights.modules.rights.model.$do.UserRoleDO">
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="role_id" jdbcType="BIGINT" property="roleId" />
  </resultMap>

  <insert id="insert" parameterType="com.zhangbin.yun.yunrights.modules.rights.model.$do.UserRoleDO">
    insert into t_sys_user_role (user_id, role_id)
    values (#{userId,jdbcType=BIGINT}, #{roleId,jdbcType=BIGINT})
  </insert>

  <delete id="deleteByUserIds" parameterType="java.util.Set">
    delete from t_sys_user_role
    where user_id in
    <foreach collection="userIds" index="index" item="userId" separator="," open="(" close=")">
      #{userId,jdbcType=INTEGER}
    </foreach>
  </delete>
</mapper>
